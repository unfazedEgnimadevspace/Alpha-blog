 <% if obj.errors.any? %>
 <div class="alert alert-danger" role="alert">
  <h3 class="alert-heading">The following errors prevented <%= obj == @user ? ' your info' : ' your article' %> from being saved</h3>
  <ul>
    <% obj.errors.full_messages.each do |msg|%>
    <li class="red-flash"> <%= msg %></li>
    <% end %>                                                                                                           
  </ul>
      <button type="button" class="close text-white border-danger bg-danger" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
</div>  
 <% end %>