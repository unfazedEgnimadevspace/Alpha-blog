<h2 class="text-center mt-4 mb-5">Password Reset</h2>

<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-8"> 
            <%= form_with(url: password_resets_path, scope: :password_reset, local: true,class: "shadow p-3 mb-3 bg-dark rounded", data: {turbo: false }) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :email,"Email:",class: "col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.text_field :email, class: 'form-control  shadow rounded', placeholder: "Enter email" %>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= f.submit "Submit Email", class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        
    </div>
</div>
