<h2 class="text-center mt-4">Create a new category </h2>

<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-10"> 
        <%= render "shared/errors", obj: @category %>
            <%= form_with(model: @category, local: true,class: "shadow p-3 mb-3 bg-dark rounded", data: {turbo: false }) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :name,"Category Name",class: "col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: 'form-control  shadow rounded', placeholder: "Enter a name" %>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= f.submit "Create category", class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class= "form-group d-flex justify-content-center text-info">
           <%= link_to "[Cancel and return to category listing]", categories_path %> <br />
            
        </div>
    </div>
</div>
