<h2 class="text-center mt-5 mb-4">Update article</h2>


<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-8"> 
        <%= render "shared/errors", obj: @category%>
            <%= form_with(model: @category, local: true,class: "shadow p-3 mb-3 bg-dark rounded", data: {turbo: false }) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :name, class: "col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: 'form-control  shadow rounded'%>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= f.submit "Update category", class: "btn btn-outline-light btn-lg " %>
                </div>
            <% end %>
        </div>
        <div class= "form-group d-flex justify-content-center text-info mb-4">
            <%= link_to "[Cancel and return to category page]", category_path(@category) %> <br />
            
        </div>
    </div>
</div>