<h2 class="text-center mt-4 mb-4"><%= @title %></h2>
 <div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
  </div>
<div class="container">
     <% @users.each do |user| %>
      <div class="row justify-content-md-center"> 
          <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
               <div class="card-header font-italic">
                  <i> <%= link_to user.username, user_path(user) %> </i>
              </div>
              <div class="card-body">
                <%= gravatar_for user, size: 200 %>
                <h5 class="mt-4"> <%= pluralize(user.articles.count, 'article') %></h5>
                <div class="mt-4">
                <%= link_to "View profile", user_path(user), class: "btn btn-outline-success" %>
                <% if logged_in? && user == current_user %>
                <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
                <% end %>
                </div>
              </div>
               <div class="card-footer text-muted flex">
               <small> Joined <%= time_ago_in_words(user.created_at) %></small>
              </div>
          </div>
        </div>  
      </div>
    <% end %>
  </div>

  <div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
  </div>