<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-10"> 
        <%= render "shared/errors", obj: @user %>
            <%= form_with(model: @user, local: true,class: "shadow p-3 mb-3 bg-dark rounded", data: {turbo: false }) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :username, class: "col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: 'form-control  shadow rounded', placeholder: "Username" %>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <%= f.label :email, class: "col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.email_field :email,  class: 'form-control shadow rounded', placeholder: "Email"  %>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <%= f.label :password, class: "col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.password_field :password,  class: 'form-control shadow rounded', placeholder: "Password"  %>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= f.submit "Sign Up",  class: "btn btn-outline-light btn-lg " %>
                </div>
            <% end %>
        </div>
        <div class= "form-group d-flex justify-content-center text-info">
            <%= link_to "[Cancel and return to articles page]", "#" %> <br />
            
        </div>
    </div>
</div>