<% if @article.errors.any? %>
<ul>
<% @article.errors.full_messages.each do |msg|%>
<li class="red-flash"> <%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_with(model: @article, local: true, data: {turbo: false }) do |f| %>
<p>
<%= f.label :title %><br />
<%= f.text_field :title%>
</p>
<p>
<%= f.label :description %><br />
<%= f.text_area :description %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>